{
  "name": "standalonegpt",
  "productName": "standaloneGPT",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "build": {
    "appId": "com.seu.nome.standalonegpt",
    "productName": "StandaloneGPT",
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "files": [
      "src/index.js",
      "src/preload.js",
      "assets/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Meu App"
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "dev": "electronmon .",
    "dist": "electron-builder --win"
  },
  "keywords": [],
  "author": {
    "name": "samuel",
    "email": "samur489@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "37.3.1",
    "electronmon": "^2.0.3",
    "png-to-ico": "^2.1.8"
  }
}
